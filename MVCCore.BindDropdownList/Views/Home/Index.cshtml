@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model SelectList
@{
    ViewData["Title"] = "Home Page";
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("body").on("change", "#ddlBooks", function () {
        $("input[name=BookName]").val($(this).find("option:selected").text());
    });
</script>
<form method="post" asp-controller="Home" asp-action="Index">
    <select id="ddlBooks" name="BookId" asp-items="Model" class="form-control">
        <option value="0">Please select Books</option>
    </select>
    <input type="hidden" name="BookName" />
    <input type="submit" value="Submit" class="btn btn-primary mt-3" />

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message");
            });
        </script>
    }
</form>